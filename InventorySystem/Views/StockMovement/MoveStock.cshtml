@model StockMovement
@{
    var products = ViewBag.Products as List<Products>;
    var warehouses = ViewBag.Warehouse as List<Warehouse>;
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Move Stock</h2>
            <hr />
            <div class="mb-3 row p-1">
                <label>Product Id</label>
                <select asp-for="ProductId" class="form-control">
                    <option value="">Select a Product</option>
                    @if (products != null)
                    {
                        @foreach (var product in products)
                        {
                            <option value="@product.Id">
                                @product.ProductName
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Quantity</label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Warehouse From Id</label>
                <select asp-for="WarehouseFromId" class="form-control">
                    <option value="">Select a Warehouse</option>
                    @if (warehouses != null)
                    {
                        @foreach (var warehouse in warehouses)
                        {
                            <option value="@warehouse.Id">
                                @warehouse.Name
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="WarehouseFromId" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Warehouse To Id</label>
                <select asp-for="WarehouseToId" class="form-control">
                    <option value="">Select a Warehouse</option>
                    @if (warehouses != null)
                    {
                        @foreach (var warehouse in warehouses)
                        {
                            <option value="@warehouse.Id">
                                @warehouse.Name
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="WarehouseToId" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Document No</label>
                <input asp-for="DocumentNo" class="form-control" />
                <span asp-validation-for="DocumentNo" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Date</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Move</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="StockIn" asp-action="index" class="btn btn-outline-secondary form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>