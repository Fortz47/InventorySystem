@model Users
@{
    var warehouse = ViewBag.Warehouse as List<Warehouse>;
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create User</h2>
            <hr />
            <div class="mb-3 row p-1">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Phone</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Warehouse Id</label>
                <select asp-for="WarehouseId" class="form-control">
                    <option value"">Select a Warehouse</option>
                    @if (warehouse != null)
                    {
                        @foreach(var warehouseObj in warehouse)
                        {
                            <option value="@warehouseObj.Id">@warehouseObj.Name</option>
                        }
                    }
                <</select>
                <span asp-validation-for="WarehouseId" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Add</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Users" asp-action="index" class="btn btn-outline-secondary form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>