@model List<InventorySystem.Models.VMs.UsersVM>

<div class="container">
    <div class="row pt-3 pb-3">
        <div class="col-6">
            <h2>Users</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Users" asp-action="Create">
                Add New User
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Warehouse</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Phone</td>
                    <td>@obj.Email</td>
                    <td>@obj.warehouse.Name</td>
                    <td>@obj.Password</td>
                    <td>
                        <div class="w-75 btn-group role-group">
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>