@model Products

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Products</h2>
            <hr />
            <div class="mb-3 row p-1">
                <label>Product Name</label>
                <input asp-for="ProductName" disabled class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>MFD</label>
                <input asp-for="MFD" disabled isaclass="form-control" />
                <span asp-validation-for="MFD" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Exp Date</label>
                <input asp-for="ExpDate" disabled class="form-control" />
                <span asp-validation-for="ExpDate" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label>Category Id</label>
                <input asp-for="CategoryId" disabled class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Products" asp-action="index" class="btn btn-outline-secondary form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>