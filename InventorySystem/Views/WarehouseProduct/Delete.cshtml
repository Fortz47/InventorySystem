@model WarehouseProduct

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Products</h2>
            <hr />
            <div class="mb-3 row p-1">
                <label>Product Id</label>
                <input asp-for="ProductId" disabled class="form-control" />
            </div>
            
            <div class="mb-3 row p-1">
                <label>Warehouse Id</label>
